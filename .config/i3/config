# vim:filetype=i3
# Variables

set $FONT pango: Fira Mono 9
hide_edge_borders           both
set $BORDER_SIZE            4
set $COLOR_ACCENT           #bf616a
set $COLOR_HIGHLIGHT        #bf616a
set $COLOR_NORMAL           #65737e
set $COLOR_INDICATOR        #65737e
set $COLOR_INDICATOR_ACTIVE #bf616a
set $TEXT_COLOR             #c0c5ce
set $I_TEXT_COLOR           #676E7D
set $SEPERATOR_COLOR        #83a598
#------------------------------------#

set $mod Mod4
font $FONT
floating_modifier $mod

# Bindings

bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+w kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+semicolon split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

bindsym $mod+r mode "resize"
bindsym $mod+Ctrl+h resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+j resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+k resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+l resize grow width 1 px or 1 ppt

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
 bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+y gaps inner current minus 6
bindsym $mod+u gaps inner current plus 6
bindsym $mod+Shift+y gaps outer current minus 6
bindsym $mod+Shift+u gaps outer current plus 6


