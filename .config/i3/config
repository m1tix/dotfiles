bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -q sset Master,0 5%- unmute"
bindsym XF86AudioMute exec --no-startup-id"amixer -q sset Master,0 toggle"

bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPrev exec --no-startup-id mpc prev

bindsym $mod+shift+x exec --no-startup-id ~/.config/scripts/lock.sh
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+shift+s exec --no-startup-id firefox
bindsym $mod+shift+w exec --no-startup-id nemo --no-desktop 
