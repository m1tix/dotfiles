! ------------------------------------------------------------------------------
! URxvt Settings
! ------------------------------------------------------------------------------
! No Scrollbar
URxvt.scrollBar: false
! Xft Settings
Xft.dpi: 96
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.antialias: 1
Xft.rgba: rgb

URxvt.letterSpace: -1
! font
URxvt*font: xft:Fira Mono:size=11,\
            xft:Liberation Mono for Powerline:style=Regular

*.foreground: #ABB2BF
*.background: #282c34
! black
*.color0:   #282c34
*.color8:   #2f3441
! red
*.color1:   #E06C75
*.color9:   #BE5046
! green 
*.color2:   #98C379
*.color10:  #98C379
! yellow
*.color3:   #E5C07B
*.color11:  #D19A66
! blue (nodark)
*.color4:   #61AFEF
*.color12:  #61AFEF
! Purple (o dark)
*.color5:   #C678DD
*.color13:  #C678DD
! cyan
*.color6:   #56B6C2
*.color14:  #56B6C2
! white
*.color7:   #ABB2BF
*.color15:  #5C6370

! ------------------------------------------------------------------------------
! ROFI settings
! ------------------------------------------------------------------------------
#define ROFI_BG     #282c34
#define ROFI_FG     #abb2bf
#define ROFI_hi_fg  #61AFEF
#define ROFI_sep    ROFI_BG
#define ROFI_border ROFI_hi_fg


rofi.color-enabled: true
rofi.color-window: ROFI_BG, ROFI_border, ROFI_sep
rofi.color-normal: ROFI_BG, ROFI_FG, ROFI_BG, ROFI_hi_fg, ROFI_BG
rofi.color-active: ROFI_BG, ROFI_FG, ROFI_BG, ROFI_BG, ROFI_hi_fg
rofi.color-urgent: ROFI_BG, ROFI_FG, ROFI_BG, ROFI_BG, ROFI_hi_fg
rofi.hide-scrollbar: true

rofi.font: Source Code Pro 11
rofi.lines: 10
rofi.opacity: 98
rofi.modi: window,run
rofi.width: 33
rofi.columns: 1
rofi.bw: 3
rofi.terminal: urxvt
!rofi.fullscreen: true
!rofi.font: terminus 12
!rofi.modi: run,ssh,window
!rofi.lines: 8
!rofi.eh: 2
!rofi.padding: 400
!rofi.opacity: 90
!rofi.show-run: true
